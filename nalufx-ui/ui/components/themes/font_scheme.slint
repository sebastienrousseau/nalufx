export enum TextTransform {
    None,
    Capitalize,
    Uppercase,
    Lowercase,
}

export struct ResponsiveFontSize {
    desktop: length,
    tablet: length,
    mobile: length,
}

export struct Fonts {
    family: string,
    size: ResponsiveFontSize,
    weight: int,
    line-height: float,
    letter-spacing: length,
    style: string,
    transform: TextTransform,
}

export struct Typo {
