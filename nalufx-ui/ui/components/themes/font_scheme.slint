/// Defines the text transformation options.
export enum TextTransform {
    /// No transformation.
    None,
    /// Capitalize the first letter of each word.
    Capitalize,
    /// Transform all letters to uppercase.
    Uppercase,
    /// Transform all letters to lowercase.
    Lowercase,
}

/// Defines responsive font sizes for different devices.
export struct ResponsiveFontSize {
    /// Font size for desktop devices.
    desktop: length,
    /// Font size for tablet devices.
    tablet: length,
    /// Font size for mobile devices.
    mobile: length,
}

/// Defines the font properties.
export struct Fonts {
    /// The font family.
    family: string,
    /// The responsive font sizes.
    size: ResponsiveFontSize,
    /// The font weight.
    weight: int,
    /// The line height.
    line-height: float,
    /// The letter spacing.
    letter-spacing: length,
    /// The font style.
    style: string,
    /// The text transformation.
    transform: TextTransform,
}

/// Defines the typographic styles used in the theme.
export struct Typo {
    /// Font properties for labels.
    label: Fonts,
    /// Font properties for light labels.
    label-light: Fonts,
    /// Font properties for headers.
    header: Fonts,
    /// Font properties for header items.
    header-item: Fonts,
    /// Font properties for light header items.
    header-item-light: Fonts,
    /// Font properties for values.
    value: Fonts,
    /// Font properties for descriptions.
    description: Fonts,
    /// Font properties for light descriptions.
    description-light: Fonts,
    /// Font properties for big values.
    value-big: Fonts,
    /// Font properties for buttons.
    button: Fonts,
    /// Font properties for input fields.
    input: Fonts,
    /// Font properties for captions.
    caption: Fonts,
    /// Font properties for overlines.
    overline: Fonts,
}

